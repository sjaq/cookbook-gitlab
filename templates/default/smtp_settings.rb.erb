# To enable smtp email delivery for your GitLab instance do next:
#
if Rails.env.production? do
  Gitlab::Application.config.action_mailer.delivery_method = :smtp

  ActionMailer::Base.smtp_settings = {
    address: "<%= node['gitlab']['email']['address'] %>",
    port: <%= node['gitlab']['email']['port'] %>,
    user_name: "<%= node['gitlab']['email']['user_name'] %>",
    password: "<%= node['gitlab']['email']['password'] %>",
    domain: "<%= node['gitlab']['email']['domain'] %>",
    authentication: "<%= node['gitlab']['email']['authentication'] %>",
    enable_starttls_auto: <%= node['gitlab']['email']['enable_starttls_auto'] %>
  }
end